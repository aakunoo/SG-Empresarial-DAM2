<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="javv_ofertas_usuario_report_template">
        <t t-foreach="docs" t-as="usuario">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong>Vendedor: </strong><span t-field="usuario.name"/>
                        </h2>
                        <t t-set="propiedades" t-value="usuario.mapped('propiedades_ids')"/>
                        <t t-if="propiedades">
                            <t t-foreach="propiedades" t-as="propiedad">
                                <h2>
                                    <span t-field="propiedad.name"/>
                                </h2>
                                <div>
                                    <strong>Precio Esperado: </strong><span t-field="propiedad.precio_esperado"/>
                                </div>
                                <div>
                                    <strong>Estado de la venta: </strong><span t-field="propiedad.state"/>
                                </div>
                                <!-- Llamada a la subplantilla de la tabla -->
                                <t t-call="javv_propiedades.ofertas_propiedades_report_template">
                                    <t t-set="ofertas" t-value="propiedad.mapped('ofertas_ids')"/>
                                </t>
                            </t>
                        </t>
                        <t t-else="">
                            <br/><br/>
                            <div>
                                <strong>Este usuario no tiene ninguna propiedad asignada.</strong>
                            </div>
                            <br/><br/>
                        </t>
                        <div class="footer">
                            <small>Informe sobre las ofertas de una propiedad inmueble.</small>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
